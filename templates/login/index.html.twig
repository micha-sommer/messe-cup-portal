{% extends 'base.html.twig' %}

{% block title %}{{ 'login.title'|trans }}{% endblock %}

{% block body %}
    <div class="p-2 p-md-3 p-md-5 mb-4 bg-light rounded-3">
        <h1 class="display-4">{{ 'login.title'|trans }}</h1>
        <p class="lead">{{ 'login.description'|trans }}</p>
        <hr class="my-4">
        {% if error %}
            <div class="alert alert-danger"
                 role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path('login') }}" method="post">
            <div class="mb-3">
                <label class="form-label required" for="username">{{ 'registration.data.email'|trans }}:</label>
                <input class="form-control" required="required" type="text" id="username" name="_username"
                       value="{{ last_username }}"/>
            </div>
            <div class="mb-3">
                <label class="form-label required" for="password">{{ 'registration.data.password'|trans }}:</label>
                <input class="form-control" required="required" type="password" id="password" name="_password"/>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="btn btn-primary btn-lg" type="submit">{{ 'login.action'|trans }}</button>
        </form>

    </div>
{% endblock %}
